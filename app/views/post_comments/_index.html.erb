<table>
	<% post_comments.each do |post_comment| %>
		<tr>
			<td>
				<%= attachment_image_tag(post_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
				<%= post_comment.user.name %>
			</td>
			<td><%= post_comment.comment %></td>
			<td>
			<% if post_comment.user == current_user %>
				<%= link_to 'Destroy', book_post_comment_path(post_comment.book, post_comment), method: :delete, remote: true, class: "btn btn-danger" %>
			<% end %>
			</td>
		</tr>
	<% end %>
</table>